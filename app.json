{
    "expo": {
        "name": "Front-ledgerly",
        "scheme": "ledgerly",
        "slug": "Front-ledgerly",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/img/bg_screen.jpg",
        "userInterfaceStyle": "light",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/img/bg_screen.jpg",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "ios": {
            "supportsTablet": true,
            "infoPlist": {
                "NSCameraUsageDescription": "We need access to your camera to scan QR codes."
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/img/image.png",
                "backgroundColor": "#ffffff"
            },
            "edgeToEdgeEnabled": true,
            "predictiveBackGestureEnabled": false,
            "permissions": [
                "android.permission.CAMERA",
                "android.permission.RECORD_AUDIO",
                "android.permission.CAMERA",
                "android.permission.RECORD_AUDIO"
            ],
            "package": "com.anonymous.Frontledgerly"
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            [
                "expo-camera",
                {
                    "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
                    "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
                    "recordAudioAndroid": true
                }
            ]
        ]
    }
}
